<?xml-stylesheet href="../-mix/doc.stage=dev.xsl" type="text/xsl"?>
<doc_root
    doc_title="lh_field"
    >
    
    <div lh_block="true">
        <label lh_field="short">
            Опциональное поле
            <input />
        </label>
        
        <label lh_field="short">
            Обязательное поле
            <input required="required" />
        </label>
        
        <label lh_field="short">
            Со значением по умолчанию
            <input value="ла-ла-ла" />
        </label>
    </div>
    
    <div lh_block="true">
        <label lh_field="short">
            Короткое поле
            <input />
        </label>
        
        <label lh_field="normal">
            Среднее поле
            <input />
        </label>
        
        <label lh_field="long">
            Длинное поле
            <input />
        </label>
    </div>
    
    <div lh_block="true">
        <label lh_field="short">
            Выбор из списка
            <select>
                <option>раз</option>
                <option selected="selected">два</option>
                <option>три</option>
            </select>
        </label>
        <label lh_field="short">
            Без значения по умолчанию
            <select required="required">
                <option value=""></option>
                <option>раз</option>
                <option>два</option>
                <option>три</option>
            </select>
        </label>
    </div>
    
</doc_root>
