<% var id = id || 'modal_group-' + cid %>
<% var formId = 'form_group-' + id %>

<div id="<%- id %>"
     class="modal">

    <% if (!deleted) { %>

    <div class="modal__header">

        <% if (referrer) { %>

        <a data-modal-toggle="<%- referrer %>" class="modal__backLink fa fa-chevron-left"></a>

        <% } else { %>

        <a class="modal__closeLink fa fa-times"></a>

        <% } %>

        <button form="<%- formId %>"
                type="submit"
                class="btn btn-primary pull-right">
            <%- models.group.id ? 'Сохранить' : 'Добавить' %>
        </button>

        <h4 class="modal__title">
            <%- models.group.id ? 'Редактирование группы' : 'Добавить группу' %>
        </h4>

    </div>
    <div class="modal__body">

        <b block="form_group"
           data-id="<%- formId %>"></b>

    </div>

    <% } else { %>

    <div class="modal__body" style="text-align: center">
        <h3 name="successRemoveTitle" style="padding-bottom: 20px;">
            Группа удалена
        </h3>
        <h4 name="removedGroupName" style="padding-bottom: 60px;">
            <%- models.group.get('name') %>
        </h4>

        <div style="padding-bottom: 30px;">
            <a name="removeContinue" class="btn btn-primary modal_group__closeLink"
               style="padding: 10px 30px;">
                Продолжить работу
            </a>
        </div>
    </div>

    <% } %>

</div>