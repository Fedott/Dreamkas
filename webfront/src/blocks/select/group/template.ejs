<% var groupModalId = 'modal_group-' + cid %>

<div class="select_group">

    <% if (add && !PAGE.collections.groups.length) { %>

    <a style="width: 100%"
       data-modal="<%- groupModalId %>"
       data-group-id="0"
       class="btn btn-transparent">
        Создать группу <i style="margin-left: 10px;" class="fa fa-plus"></i>
    </a>

    <% } else { %>

    <div class="input-group">

        <select class="form-control" name="subCategory" <%- disabled == 1 ? 'disabled' : '' %>>

            <% if (all) { %>

            <option value="" selected>Все группы</option>

            <% } else { %>

            <option value="" selected disabled>Выберите группу</option>

            <% } %>

            <% collection.forEach(function(group){ %>
            <option <%- group.id === selected && 'selected' %> value="<%- group.id %>">
                <%- group.get('name') %>
            </option>
            <% }) %>

        </select>

        <% if (add) { %>

        <a class="input-group-addon form__inputTransparentButton"
           data-modal="<%- groupModalId %>"
           data-group-id="0">
            <i class="fa fa-plus"></i>
        </a>

        <% } %>

    </div>

    <% } %>

    <% if (add) { %>

    <b block="modal_group"
       data-id="<%- groupModalId %>"></b>

    <% } %>

</div>