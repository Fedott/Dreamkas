<div class="autocomplete__suggestion">

    <% if (query.length >= 3) { %>

    <% if (data.length) { %>

    <% _.forEach(data, function(item){ %>
        <div class="autocomplete__item">
            <%- item.name %>
        </div>
    <% }) %>

    <% } else { %>

    <div class="autocomplete__hint">По запросу <b><%- query %></b> товаров не найдено.</div>

    <% } %>

    <% } %>

    <% if (query.length < 3) { %>

    <div class="autocomplete__hint">Для поиска товаров введите 3 или более символа.</div>

    <% } %>

</div>