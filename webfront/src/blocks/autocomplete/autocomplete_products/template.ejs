<div class="autocomplete autocomplete_products">

    <div class="input-group" style="width: 100%;">

        <a class="input-group-addon">
            <i class="fa fa-search"></i>
        </a>

        <input <%- autofocus && 'autofocus' %>
                placeholder="<%- placeholder %>"
                type="text"
                class="form-control autocomplete__input"
                name="<%- inputName %>"
                value="<%- query %>">

    </div>

    <div class="autocomplete__tether">

        <%= suggestionTemplate(obj) %>

    </div>

</div>