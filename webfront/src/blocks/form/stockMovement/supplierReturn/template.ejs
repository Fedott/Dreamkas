<form id="<%- id %>" class="form form_supplierReturn">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">

                <label class="control-label">Дата *</label>

                <b block="inputDate"
                   data-value="<%- model.get('date') ? formatDate(model.get('date')) : formatDate(new Date()) %>"></b>

            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">

                <label class="control-label">Магазин *</label>

                <b block="select_store"
                   data-selected="<%- model.get('store.id') %>"
                   data-add="1"></b>

                <div class="form__errorMessage" for="store"></div>

            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">

                <label class="control-label">Поставщик</label>

                <div class="row">
                    <div class="col-md-12">

						<b block="select_supplier"
						   data-selected="<%- model.get('supplier.id') %>"></b>

					</div>
                </div>

            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="checkbox">
            <input type="checkbox"
                   name="paid"
                   value="true"
                    <%- model.get('paid') && 'checked' %>/>
                    <span class="checkbox__text">
                        Погашен
                    </span>
        </label>
    </div>
</form>