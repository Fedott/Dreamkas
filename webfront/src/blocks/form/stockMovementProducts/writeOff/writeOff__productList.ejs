<tbody>
<% collection.forEach(function(product) { %>
<tr name="stockMovementProduct">
	<td name="name"><%- product.get('product.name') %></td>
	<td style="white-space: nowrap" name="price"><%- formatMoney(product.get('price')) %></td>
	<td style="white-space: nowrap" name="quantity"><%- formatAmount(product.get('quantity')) %> <%- product.get('product.object.units') || 'шт.' %></td>
	<td style="white-space: nowrap" name="totalPrice"><%- formatMoney(product.get('totalPrice')) %></td>
	<td name="cause"><%- product.get('cause') %></td>
	<td style="text-align: center">
		<a style="font-size: 17px; position: relative; left: 4px; top: -2px;"
		   data-model-cid="<%- product.cid %>"
		   class="table_stockMovementProducts__removeProductLink btn fa fa-times"></a>
	</td>
</tr>
<% }); %>
</tbody>
