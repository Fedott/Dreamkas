<form id="<%- id %>" class="form form_supplier">
    <div class="form-group">
        <label class="control-label">Название *</label>

        <div class="input-icon right">
            <input autocomplete="none"
                   name="name"
                   type="text"
                   class="form-control"
                   autofocus
                   value="<%- model.get('name') %>">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Адрес</label>

        <div class="input-icon right">
            <input name="address"
                   type="text"
                   class="form-control"
                   value="<%- model.get('address') %>">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Телефон</label>

        <div class="input-icon right">
            <input name="phone"
                   type="text"
                   class="form-control"
                   value="<%- model.get('phone') %>">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Email</label>

        <div class="input-icon right">
            <input name="email"
                   type="text"
                   class="form-control"
                   value="<%- model.get('email') %>">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Контактное лицо</label>

        <div class="input-icon right">
            <input name="contactPerson"
                   type="text"
                   class="form-control"
                   value="<%- model.get('contactPerson') %>">
        </div>
    </div>

    <% if (model.id) { %>
    <div class="confirmLink" style="padding-top: 20px;">

        <div class="confirmLink__trigger">
            <span class="removeLink">
                Удалить поставщика
            </span>
        </div>

        <div class="confirmLink__confirmation">
            <span class="removeLink form_supplier__removeLink">
                Подтвердить удаление
            </span>
        </div>

    </div>
    <% } %>

</form>