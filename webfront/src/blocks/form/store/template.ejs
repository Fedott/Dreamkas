<form id="<%- id %>" class="form form_store">
    <div class="form-group">
        <label class="control-label">Название *</label>

        <div class="input-icon right">
            <input
                    name="name"
                    type="text"
                    placeholder="Название магазина"
                    class="form-control"
                    autofocus
                    value="<%- model.get('name') %>">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Адрес</label>

        <div class="input-icon right">
            <input
                    name="address"
                    type="text"
                    placeholder="Адрес магазина"
                    class="form-control"
                    value="<%- model.get('address') %>">
        </div>
    </div>

    <% if (model.id) { %>

    <div style="padding-top: 20px;">

        <div class="form__errorMessage" for="delete"></div>

        <div class="confirmLink" >

            <div class="confirmLink__trigger">
            <span class="removeLink">
                Удалить магазин
            </span>
            </div>

            <div class="confirmLink__confirmation">
            <span class="removeLink form_store__removeLink">
                Подтвердить удаление
            </span>
            </div>

        </div>

    </div>


    <% } %>
</form>