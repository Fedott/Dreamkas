<form id="<%- id %>"
      class="form form_product">

    <div class="form-group">

        <label class="control-label">Наименование *</label>

        <input name="name"
               type="text"
               autocomplete="off"
               autofocus
               class="form-control"
               value="<%- model.get('name') %>">
    </div>

    <div class="form-group">

        <label class="control-label">Группа *</label>

        <b block="select_group"
           data-selected="<%- get('selectedGroupId') %>"
           data-add="1"></b>

        <div class="form__errorMessage" for="subCategory"></div>

    </div>

    <div class="form-group">

        <label class="control-label">Единица измерения</label>

        <div class="row">
            <div class="col-md-5">
                <input name="units"
                       type="text"
                       class="form-control"
                       value="<%- model.get('units') %>">
            </div>
        </div>

    </div>

    <div class="form-group">

        <label class="control-label">Штрих-код</label>

        <input name="barcode"
               type="text"
               class="form-control"
               value="<%- model.get('barcode') %>">
    </div>

    <div class="form-group">

        <label class="control-label">НДС</label>

        <div class="row">
            <div class="col-md-5">

                <b block="select_vat" data-selected="<%- model.get('vat') %>"></b>

            </div>
        </div>
    </div>

    <div class="form-group">

        <label class="control-label">Цена закупки, <i class="fa fa-rub"></i></label>

        <div class="row">
            <div class="col-md-5">
                <input name="purchasePrice"
                       type="text"
                       class="form-control"
                       value="<%- model.get('purchasePrice') ? formatMoney(model.get('purchasePrice')) : '' %>">
            </div>
        </div>
    </div>

    <div class="form-group">

        <label class="control-label">Цена продажи, <i class="fa fa-rub"></i></label>

        <div class="row">
            <div class="col-md-5">
                <input name="sellingPrice"
                       type="text"
                       class="form-control"
                       value="<%- model.get('sellingPrice') ? formatMoney(model.get('sellingPrice')) : '' %>">
            </div>
            <div class="col-md-7 form_product__markup">
                Наценка: <span class="form_product__markupText"></span> %
            </div>
        </div>

    </div>

    <% if (model.id) { %>
    <div class="confirmLink">

        <div class="confirmLink__trigger">
            <span class="removeLink">
                Удалить товар
            </span>
        </div>

        <div class="confirmLink__confirmation">
            <span class="removeLink form_product__removeLink">
                Подтвердить удаление
            </span>
        </div>

    </div>
    <% } %>

</form>