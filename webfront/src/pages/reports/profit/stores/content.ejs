<!--BEGIN TITLE PAGE-->
<div class="page__head">

    <div class="page__title">

        <a href="/reports"
           class="fa fa-long-arrow-left"
           style="font-size: 25px; margin-right: 10px;"></a>

        Продажи и прибыль по сети

    </div>

</div>
<!--END TITLE PAGE-->

<!--BEGIN CONTENT-->
<div class="page__content">

    <div class="row">
        <div class="col-md-12">

			<% if (collections.stores.length) { %>
			<div class="panel">
				<div class="panel-body">

					<div class="row" style="padding-bottom: 20px;">
						<div class="col-md-4">
							<b block="inputDateRange"
							   data-date-from="<%- params.dateFrom %>"
							   data-date-to="<%- params.dateTo %>"></b>
						</div>
					</div>

					<b block="total"></b>

					<b block="table_storesProfit"></b>

				</div>
			</div>
			<% } else { %>
			<div class="alert alert-info">
				У вас ещё нет ни одного магазина. Для просмотра отчета добавьте хотя бы один магазин.
			</div>
			<% } %>

        </div>
    </div>

</div>
<!--END CONTENT-->
