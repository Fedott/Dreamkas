<!--BEGIN TITLE PAGE-->
<div class="page__head">
    <div class="page__title">Обзор</div>

    <ul class="page__tabs nav nav-tabs">
        <li class="active"><a href="/dashboard">Быстрый старт</a></li>
        <li><a href="#">Основная статистика</a></li>
    </ul>
</div>
<!--END TITLE PAGE-->

<!--BEGIN CONTENT-->
<div class="page__content">
    <div class="row">

        <% _.forEach(steps, function(step, index) {
            step.number = index + 1;
            step.active = (step.number == activeStep());
            step.buttonAttrs = step.buttonAttrs || {};
        %>

        <%= partials.step(step) %>

        <% }); %>

    </div>

    <div class="page__dashboard__info row">
        <div class="page__dashboard__infoCell col-md-4">

            <% if (collections.stores.length != 0) { %>

            <div class="page__dashboard__infoTitle">
                Магазин:
            </div>
            <div class="page__dashboard__infoValue">
                <%- collections.stores.at(0).get('name') %>
            </div>

            <% } %>

        </div>
        <div class="page__dashboard__infoCell col-md-4">
        </div>
        <div class="page__dashboard__infoCell col-md-4">
        </div>
    </div>
</div>
<!--END CONTENT-->

<!--MODALS-->
<b block="modal_store"></b>
<!--END MODALS-->