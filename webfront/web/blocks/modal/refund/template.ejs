<% var models = {
    receipt: PAGE.collections.receipts.get(PAGE.params.receiptId)
} %>

<div class="modal modal_refund" id="modal_refund">
    <div class="modal__header">
        <a class="modal__closeLink fa fa-times"></a>

        <button form="form_refund"
                type="submit"
                class="modal_refund__button btn btn-primary pull-right">
            Вернуть
        </button>

        <h4 class="modal__title">
            Возврат средств
        </h4>
    </div>
    <div class="modal__body">

        <% models.receipt.collections.products.forEach(function(receiptProductModel){ %>

        <div name="position" class="modal_refund__position row">

            <div class="col col-md-8">
                <div name="productName" class="modal_refund__productName">
                    <%- receiptProductModel.get('product.name') %>
                </div>
                <div name="productBarcode">
                    <%- receiptProductModel.get('product.barcode') %>
                </div>
            </div>

            <div class="col col-md-4">
                <b block="inputNumber"></b>
            </div>

        </div>

        <% }) %>

    </div>
</div>