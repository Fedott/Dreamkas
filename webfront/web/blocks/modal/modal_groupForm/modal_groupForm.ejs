<% var GroupModel = require('models/group/group') %>
<% var group = group || new GroupModel() %>

<div id="<%- group.id ? 'modal-groupEdit' : 'modal-groupAdd' %>"
     tabindex="-1"
     role="dialog"
     aria-labelledby="modal-default-label"
     aria-hidden="true"
     class="modal fade"
     style="display: none;">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a type="button"
                   data-dismiss="modal"
                   aria-hidden="true"
                   class="close pull-left fa fa-times"></a>

                <button form="<%- group.id ? 'form_groupEdit' : 'form_groupAdd' %>"
                        type="submit"
                        class="btn btn-primary pull-right">
                    <%- group.id ? 'Сохранить' : 'Добавить' %>
                </button>

                <h4 id="modal-default-label" class="modal-title">
                    <%- group.id ? 'Редактирование группы' : 'Добавить группу' %>
                </h4>

                <span class="clearfix"></span>
            </div>
            <div class="modal-body">

                <form id="<%- group.id ? 'form_groupEdit' : 'form_groupAdd' %>" class="form form_group">
                    <div class="form-group">

                        <label for="inputSubject" class="control-label">Наименование</label>

                        <div class="input-icon right">
                            <input
                                    name="name"
                                    type="text"
                                    placeholder=""
                                    class="form-control"
                                    value="<%- group.get('name') %>">
                        </div>
                    </div>

                    <% if (group.id) { %>
                    <div class="confirmLink">

                        <div class="confirmLink__trigger">
                        <span class="form__groupRemoveLink">
                            <i style="margin-right: 5px;" class="fa fa-trash-o"></i>
                            Удалить группу
                        </span>
                        </div>

                        <div class="confirmLink__confirmation">
                        <span class="form__groupRemoveLink">
                            <i style="margin-right: 5px;" class="fa fa-trash-o"></i>
                            Подтвердить удаление
                        </span>
                        </div>

                    </div>
                    <% } %>
                </form>

            </div>
        </div>
    </div>
</div>