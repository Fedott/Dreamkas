<% var SupplierModel = require('models/supplier/supplier') %>
<% var supplierModel = supplierModel || new SupplierModel() %>

<div id="<%- supplierModel.id ? 'modal-supplierEdit' : 'modal-supplierAdd' %>"
     tabindex="-1"
     role="dialog"
     aria-labelledby="modal-default-label"
     aria-hidden="true"
     class="modal fade"
     style="display: none;">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a type="button"
                   data-dismiss="modal"
                   aria-hidden="true"
                   class="close pull-left fa fa-times"></a>

                <button form="<%- supplierModel.id ? 'form_supplierEdit' : 'form_supplierAdd' %>"
                        type="submit"
                        class="btn btn-primary pull-right">
                    <%- supplierModel.id ? 'Сохранить' : 'Добавить' %>
                </button>

                <h4 class="modal-title">
                    <%- supplierModel.id ? 'Редактирование поставщика' : 'Добавление поставщика' %>
                </h4>

                <span class="clearfix"></span>
            </div>
            <div class="modal-body">

                <form id="<%- supplierModel.id ? 'form_supplierEdit' : 'form_supplierAdd' %>" class="form form_supplier">
                    <div class="form-store">

                        <div class="form-group">
                            <label class="control-label">Название *</label>

                            <div class="input-icon right">
                                <input
                                        name="name"
                                        type="text"
                                        class="form-control"
                                        autofocus
                                        value="<%- supplierModel.get('name') %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Адрес</label>

                            <div class="input-icon right">
                                <input
                                        name="address"
                                        type="text"
                                        class="form-control"
                                        value="<%- supplierModel.get('address') %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Телефон</label>

                            <div class="input-icon right">
                                <input
                                        name="phone"
                                        type="text"
                                        class="form-control"
                                        value="<%- supplierModel.get('phone') %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Email</label>

                            <div class="input-icon right">
                                <input
                                        name="email"
                                        type="text"
                                        class="form-control"
                                        value="<%- supplierModel.get('email') %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Контактное лицо</label>

                            <div class="input-icon right">
                                <input
                                        name="contactPerson"
                                        type="text"
                                        class="form-control"
                                        value="<%- supplierModel.get('contactPerson') %>">
                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>