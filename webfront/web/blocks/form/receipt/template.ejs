<form class="form_receipt"
      id="<%- get('id') %>">

    <div class="form-group form_receipt__change pull-right" style="padding-bottom: 20px;">
        <label>
            <b>Сдача</b>
        </label>

        <div name="change" class="form_receipt__totalPrice">
            {calculateChange < data.payment.amountTendered} <i class="fa fa-rub"></i>
        </div>

    </div>

    <div class="form-group" style="padding-bottom: 20px;">
        <label>
            <b>Сумма к оплате</b>
        </label>

        <div name="totalPrice" class="form_receipt__totalPrice">
            <%- calculateTotalPrice() %> <i class="fa fa-rub"></i>
        </div>

    </div>

    <div class="form-group" style="padding-bottom: 30px;">
        <label>Оплата</label>

        <div>
            <div class="radioGroup">
                <label>
                    <input type="radio" name="payment.type"
                           value="cash" <%- data.payment.type === 'cash' && 'checked' %> />

                    <div class="radioGroup__text">
                        Наличными
                    </div>
                </label>

                <label>
                    <input type="radio" name="payment.type"
                           value="bankcard" <%- data.payment.type === 'bankcard' && 'checked' %> />

                    <div class="radioGroup__text">
                        Банковской картой
                    </div>
                </label>
            </div>
        </div>
    </div>

    <div class="form-group form_receipt__cashInput">
        <label><b>Внесенная сумма наличными</b></label>

        <input name="payment.amountTendered"
               type="text"
               rv-live-value="data.payment.amountTendered"
               class="form-control"
               autofocus>
    </div>
</form>