<%
/**
 *
 * @model - optional
 */
%>
<% var Model = require('models/companyOrganization/companyOrganization') %>
<% var model = model || new Model() %>

<form class="form form_companyOrganization">
    <div class="form__field">
        <label class="form__label">
            Наименование *
        </label>
        <input autofocus
               value="<%- model.get('name') %>"
               class="inputText"
               type="text"
               name="name"/>
    </div>
    <div class="form__field">
        <label class="form__label">
            Телефон
        </label>
        <input value="<%- model.get('phone') %>"
               class="inputText"
               type="text"
               name="phone"/>
    </div>
    <div class="form__field">
        <label class="form__label">
            Факс
        </label>
        <input class="inputText"
               value="<%- model.get('fax') %>"
               type="text"
               name="fax"/>
    </div>
    <div class="form__field">
        <label class="form__label">
            Эл. почта
        </label>
        <input class="inputText"
               value="<%- model.get('email') %>"
               type="text"
               name="email"/>
    </div>
    <div class="form__field">
        <label class="form__label">
            Руководитель
        </label>
        <input class="inputText"
               value="<%- model.get('director') %>"
               type="text"
               name="director"/>
    </div>
    <div class="form__field">
        <label class="form__label">
            Главный бухгалтер
        </label>
        <input class="inputText"
               value="<%- model.get('chiefAccountant') %>"
               type="text"
               name="chiefAccountant"/>
    </div>
    <div class="form__field">
        <label class="form__label">
            Фактический адрес
        </label>
        <textarea class="inputText" name="address"><%- model.get('address') %></textarea>
    </div>
    <div class="form__controls">
        <button type="submit" class="button">
            <%- model.id ? 'Сохранить' : 'Добавить' %>
        </button>
    </div>
</form>