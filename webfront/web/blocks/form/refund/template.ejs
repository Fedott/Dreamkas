<form class="form_refund"
      id="<%- get('id') %>">

    <% model.collections.refundProducts.forEach(function(refundProductModel){ %>

    <div name="position" class="modal_refund__position row">

        <div class="col col-md-8">
            <div name="productName" class="modal_refund__productName">
                <%- refundProductModel.models.receiptProduct.get('product.name') %>
            </div>
            <div name="productBarcode">
                <%- refundProductModel.models.receiptProduct.get('product.barcode') %>
            </div>
        </div>

        <div class="col col-md-4">
            <b block="inputNumber"></b>
        </div>

    </div>

    <% }) %>

</form>