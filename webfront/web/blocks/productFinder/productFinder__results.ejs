<div name="productList" class="productFinder__results">

    <% if(collection.length) { %>

        <div class="list-group">
            <% collection.forEach(function(productModel){ %>

            <span name="product" class="list-group-item">
                <span name="name"><%= highlight(productModel.get('name')) %></span>
                <span class="productFinder__itemInfo">
                    / <span name="sku"><%= highlight(productModel.get('sku')) %></span>

                    <% if(productModel.get('barcode')) { %>
                        / <span name="barcode"><%= highlight(productModel.get('barcode')) %></span>
                    <% } %>
                </span>
            </span>

            <% }) %>
        </div>

    <% } else if(collection.searchQuery && collection.searchQuery.length >= 3) { %>
        <div class="alert alert-info">
            Продуктов не найдено.
        </div>
    <% } else { %>
        <div class="alert alert-info">
            Для поиска товара введите 3 или более символа.
        </div>
    <% } %>

</div>