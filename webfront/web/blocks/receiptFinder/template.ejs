<div class="receiptFinder page__panel">

	<div class="receiptFinder__input">
		<div class="input-group">

            <span class="input-group-addon">
                <i class="fa fa-search"></i>
            </span>

			<input autofocus
				   placeholder="Наименование или артикул товара"
				   type="text"
				   name="product"
				   class="form-control">
            <span class="receiptFinder__resetLink input-group-addon">
                <i class="fa fa-times"></i>
            </span>
		</div>
	</div>

	<b block="inputDateRange"
	   data-date-from="<%- collections.receipts.filters.dateFrom %>"
	   data-date-to="<%- collections.receipts.filters.dateTo %>">
	</b>

	<b block="receiptFinder__results"></b>

</div>