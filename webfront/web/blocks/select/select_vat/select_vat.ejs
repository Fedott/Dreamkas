<% var values = {
    '0': 'Не облагается',
    '10': '10%',
    '18': '18%'
} %>

<% var selected = selected || 0 %>

<select class="form-control" name="vat">
    <% _.forEach(['0', '10', '18'], function(value, index){ %>

    <option <%- selected === value ? 'selected' : '' %> value="<%- value %>">
        <%- values[value] %>
    </option>
    <% }) %>
</select>


