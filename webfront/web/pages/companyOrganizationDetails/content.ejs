<%
/**
 *
 * @models.companyOrganization
 */
%>

<div class="content">

    <h1><%- models.companyOrganization.get('name') %></h1>

    <h2>Юридические реквизиты</h2>

    <form class="form form_companyOrganizationDetails">
        <div class="form__field">
            <label class="form__label">
                Вид организации
            </label>
            <div style="padding-bottom: 10px;">
                <label class="inputRadio">
                    <input type="radio" name="type" value="entrepreneur" checked />
                <span class="inputRadio__text">
                    Индивидуальный предприниматель
                </span>
                </label>
            </div>
            <div>
                <label class="inputRadio">
                <input type="radio" name="type" value="legalEntity" />
                <span class="inputRadio__text">
                    Юридическое лицо
                </span>
                </label>
            </div>
        </div>
        <div class="form__field">
            <label class="form__label">
                Полное наименование
            </label>
            <input autofocus name="fullName" type="text" class="inputText" />
        </div>
        <div class="form__field">
            <label class="form__label">
                Адресс регистрации
            </label>
            <textarea name="legalAddress" class="inputText"></textarea>
        </div>
        <div class="form__field">
            <label class="form__label">
                ИНН
            </label>
            <input name="inn" type="text" class="inputText" />
        </div>
        <div class="form__field">
            <label class="form__label">
                ОКПО
            </label>
            <input name="okpo" type="text" class="inputText" />
        </div>
        <div class="form__field">
            <label class="form__label">
                ОГРНИП
            </label>
            <input type="text" name="ogrnip" class="inputText" />
        </div>
        <div class="form__field">
            <label class="form__label">
                Номер свидетельства
            </label>
            <input name="certificateNumber" type="text" class="inputText" />
        </div>
        <div class="form__field">
            <label class="form__label">
                Дата свидетельства
            </label>
            <input name="certificateDate" type="text" class="inputText inputDate" />
        </div>
        <div class="form__controls">
            <button type="submit" class="button">
                Сохранить
            </button>
        </div>
    </form>
</div>