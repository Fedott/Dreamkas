<%
/**
 *
 * @collections.orders
 * @models.store
 */
%>

<% var formatDate = require('kit/formatDate') %>

<div class="content">
    <h2>Невыполненные заказы</h2>

    <% if (collections.orders.length) { %>
    <table class="table">
        <tbody>

        <% collections.orders.forEach(function(orderModel){ %>
        <tr name="order" href="/stores/<%- models.store.id %>/orders/<%- orderModel.id %>">
            <td name="orderNumber">
                <%- orderModel.get('number') %>
            </td>
            <td name="orderSupplier">
                <%- orderModel.get('supplier.name') %>
            </td>
            <td name="orderDate">
                <%- formatDate(orderModel.get('createdDate')) %>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p>
        Нет невыполненных заказов
    </p>
    <% } %>
</div>