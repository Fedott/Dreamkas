<% var partials = {
    modal_groupForm: require('ejs!blocks/modal/modal_groupForm/modal_groupForm.ejs')
}%>

<div class="row">
    <% if (collections.groups.length) {%>
        <div class="col-sm-3 col-md-2">
            <div class="panel">
                <div class="panel-body pan">
                    <ul class="nav nav-pills nav-stacked">
                        <% collections.groups.forEach(function(group) { %>
                            <li class="">
                                <a href="/catalog/groups/<%- group.id %>">
                                    <%- group.get('name') %>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
            <a href="#" role="button" class="btn btn-default btn-sm btn-block">Добавить группу</a>
        </div>
        <div class="col-sm-9 col-md-10">
            <div class="panel panel-white">
                <div class="panel-heading">
                    Макароны
                    <span class="pull-right">
                        <a href="edit" class="fa fa-edit"></a>
                    </span>
                </div>
                <div class="panel-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Название</th>
                            <th>Цена продажи, <i class="fa fa-rub"></i></th>
                            <th>Артикул</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Хорошие</td>
                            <td>23,43</td>
                            <td>10001</td>
                        </tr>
                        <tr>
                            <td>Плохие</td>
                            <td>45,00</td>
                            <td>10002</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="col-lg-12">
           <div class="alert alert-info"><strong>У вас пока нет ни групп, ни товаров!</strong>
           </div>
        </div>
        <div class="col-sm-3 col-md-2">
            <span data-target="#modal-group"
               data-toggle="modal"
               role="button"
               class="btn btn-default btn-md btn-block">Добавить группу</span>
        </div>
    <% } %>
</div>

<%= partials.modal_groupForm() %>