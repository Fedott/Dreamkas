<% var partials = {
    modal_groupForm: require('ejs!blocks/modal/modal_groupForm/modal_groupForm.ejs')
} %>

<div class="row group">
    <% if (collections.groups.length) { %>
    <div class="col-sm-2 col-md-3">
        <div class="panel">
            <div class="panel-body pan">
                <ul class="groupList nav nav-pills nav-stacked">

                    <% collections.groups.forEach(function(group) { %>

                    <li class="<%- group.id === models.group.id ? 'active' : '' %>">
                        <a data-groupid="<%- group.id %>"
                           class="groupList__link"
                           href="/catalog/groups/<%- group.id %>">
                            <%= group.element('name') %>
                        </a>
                    </li>

                    <% }) %>
                </ul>
            </div>
        </div>
            <span data-target="#modal-groupAdd"
                  data-toggle="modal"
                  role="button"
                  class="btn btn-default btn-sm btn-block">Добавить группу</span>
    </div>
    <div class="col-sm- col-md-9">
        <div class="panel panel-white">
            <div class="panel-heading">
                <%= models.group.element('name') %>
                <span class="pull-right">
                    <a style="cursor: pointer;"
                          data-target="#modal-groupEdit"
                          data-toggle="modal"
                          class="fa fa-edit"></a>
                </span>
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена продажи, <i class="fa fa-rub"></i></th>
                        <th>Артикул</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Хорошие</td>
                        <td>23,43</td>
                        <td>10001</td>
                    </tr>
                    <tr>
                        <td>Плохие</td>
                        <td>45,00</td>
                        <td>10002</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <% } else { %>
    <div class="col-lg-12">
        <div class="alert alert-info"><strong>У вас пока нет ни групп, ни товаров!</strong>
        </div>
    </div>
    <div class="col-sm-3 col-md-2">
            <span data-target="#modal-groupAdd"
                  data-toggle="modal"
                  role="button"
                  class="btn btn-default btn-md btn-block">Добавить группу</span>
    </div>
    <% } %>
</div>

<%= partials.modal_groupForm() %>

<% if (collections.groups.length) { %>
<%= partials.modal_groupForm({
    group: models.group
}) %>
<% } %>