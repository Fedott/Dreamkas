<% var formatMoney = require('kit/formatMoney') %>

<div class="content">
    <form class="form form_storeProduct">
        <h2>Редактирование наценки/цены</h2>
        <fieldset class="form__fieldset">
            <div class="form__field form__field_inline">
                <label class="form__label">
                    Наценка<br/>
                    <% if (models.product.get('product.retailMarkupMin') >= 0) { %>
                    (<span name="retailMarkupRange"><%- formatMoney(models.product.get('product.retailMarkupMin')) %>
                        - <%- formatMoney(models.product.get('product.retailMarkupMax')) %></span> %)
                    <% } %>
                </label>
                <input
                        style="width: 100px;"
                        value="<%- models.product.get('retailMarkup') ? models.product.get('retailMarkup') : models.product.get('product.retailMarkupMax') %>"
                        class="inputText retailMarkup productForm__linkedInput <%- models.product.get('retailPricePreference') == 'retailMarkup' ? '' : 'productForm__hiddenInput' %>"
                        type="text"
                        name="retailMarkup"/>
                <span class="productForm__inputLink">
                    <span class="productForm__inputLinkText" name="retailMarkupHint"></span>
                </span>
                <span class="inputText__postfix">%</span>
            </div>
            <div class="form__field form__field_inline">
                <label class="form__label">
                    Цена продажи<br/>
                    <% if (models.product.get('product.retailPriceMin')) { %>
                    (<span name="retailPriceRange"><%- formatMoney(models.product.get('product.retailPriceMin')) %>
                        - <%- formatMoney(models.product.get('product.retailPriceMax')) %></span> руб.)
                    <% } %>
                </label>
                <input
                        style="width: 100px;"
                        value="<%- models.product.get('retailPrice') ? formatMoney(models.product.get('retailPrice')) : models.product.get('product.retailPriceMax') %>"
                        class="inputText retailPrice productForm__linkedInput <%- models.product.get('retailPricePreference') == 'retailMarkup' ? 'productForm__hiddenInput' : '' %>"
                        type="text"
                        name="retailPrice"/>
                <span class="productForm__inputLink">
                    <span class="productForm__inputLinkText" name="retailPriceHint"></span>
                </span>
                <span class="inputText__postfix">руб.</span>
                <span class="productForm__rounding"></span>
            </div>
            <input type="hidden" value="<%- models.product.get('retailPricePreference') %>" name="retailPricePreference"/>
        </fieldset>
        <div class="form__controls">
            <button type="submit" lh-button class="button">
                Сохранить
            </button>
        </div>

    </form>

</div>