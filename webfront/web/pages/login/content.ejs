<% var LoginModel = require('models/login'); %>

<div class="content">
    <h1>Добро пожаловать в Lighthouse!</h1>

    <% if(params.signup === 'success') { %>
    <p>
        Ваша учетная запись успешно создана. <br/>
        Для входа введите пароль присланный вам на email.
    </p>
    <% } %>

    <% if(params.restorePassword === 'success') { %>
    <p>
        Ваш новый пароль отправлен вам на email.
    </p>
    <% } %>

    <form class="form form_login">
        <div class="form__field">
            <label class="form__label">Email</label>
            <input class="inputText"
                   type="text"
                   name="username"
                   value="<%- LoginModel.email %>"/>
        </div>
        <div class="form__field">
            <label class="form__label">Пароль</label>
            <input class="inputText"
                   type="password"
                   name="password"/>
        </div>
        <div class="form__controls">
            <div style="padding-bottom: 10px;">
                <button type="submit" class="button">
                    Войти
                </button>
                <a style="margin-left: 70px" href="/restorePassword" >
                    Забыли пароль?
                </a>
            </div>
        </div>
    </form>

</div>
