<%
/**
 *
 * @set10IntegrationUrl
 * @set10IntegrationLogin
 * @set10IntegrationPassword
 *
 * @set10ImportUrl
 * @set10ImportLogin
 * @set10ImportPassword
 * @set10ImportInterval
 */
%>

<div class="content">
    <h1>Настройки</h1>

    <h4>Экспорт в SR10</h4>

    <form class="form form_exportSettings">
        <div class="form__field form__field_inline">
            <label class="form__label">Url</label>
            <input class="inputText"
                   type="text"
                   value="<%- get('set10IntegrationUrl.value') %>"
                   name="set10-integration-url"/>
        </div>
        <div class="form__field form__field_inline">
            <label class="form__label">Логин</label>
            <input class="inputText"
                   type="text"
                   value="<%- get('set10IntegrationLogin.value') %>"
                   name="set10-integration-login"/>
        </div>
        <div class="form__field form__field_inline">
            <label class="form__label">Пароль</label>
            <input class="inputText"
                   type="password"
                   value="<%- get('set10IntegrationPassword.value') %>"
                   name="set10-integration-password"/>
        </div>
        <div class="form__controls">
            <button type="submit" lh-button class="button">
                Сохранить настройки экспорта
            </button>
        </div>
    </form>

    <h4 style="padding-top: 40px;">Импорт из SR10</h4>

    <form class="form form_importSettings">
        <div class="form__field form__field_inline">
            <label class="form__label">Url</label>
            <input class="inputText"
                   type="text"
                   value="<%- get('set10ImportUrl.value') %>"
                   name="set10-import-url"/>
        </div>
        <div class="form__field form__field_inline">
            <label class="form__label">Логин</label>
            <input class="inputText"
                   type="text"
                   value="<%- get('set10ImportLogin.value') %>"
                   name="set10-import-login"/>
        </div>
        <div class="form__field form__field_inline">
            <label class="form__label">Пароль</label>
            <input class="inputText"
                   type="password"
                   value="<%- get('set10ImportPassword.value') %>"
                   name="set10-import-password"/>
        </div>
        <div class="form__field form__field_inline">
            <label class="form__label">Интервал</label>
            <input class="inputText"
                   type="text"
                   value="<%- get('set10ImportInterval.value') %>"
                   name="set10-import-interval"/>
        </div>
        <div class="form__controls">
            <button type="submit" lh-button class="button">
                Сохранить настройки импорта
            </button>
        </div>
    </form>

</div>