<div class="content">
    <h1>Магазины</h1>

    <% if (collections.stores.length) { %>
    <table class="table">
        <thead>
        <tr>
            <th>Номер магазина</th>
            <th>Адрес</th>
            <th>Контакты</th>
        </tr>
        </thead>
        <tbody>
        <% collections.stores.forEach(function(storeModel){ %>
        <tr href="/stores/<%- storeModel.id %>">
            <td>
                <%- storeModel.get('number') %>
            </td>
            <td>
                <%- storeModel.get('address') %>
            </td>
            <td>
                <%- storeModel.get('contacts') %>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p>
        В вашей сети пока нет ни одного магазина.
    </p>
    <% } %>
</div>