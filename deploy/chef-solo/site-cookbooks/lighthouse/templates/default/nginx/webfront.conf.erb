# webfront
server {
    server_name ~^(?<webfronthost>.+)\.(?<env>.+?)\.webfront\.(lighthouse|lh)\.cs$;
    server_name ~^(?<webfronthost>.+(?!\.(webfront|api)))\.(lighthouse|lh)\.cs$;
    
    if ($env = "") {
        set $env "staging";
    }

    root /var/www/$webfronthost.$env.webfront/current;

    access_log /var/log/nginx/$webfronthost.$env.webfront.access.log;
    error_log  /var/log/nginx/$webfronthost.$env.webfront.error.log;

    index index.html;

    error_page 404 = /404.html?webfronthost=$webfronthost&env=$env;

    try_files $uri $uri/ @rewrite;

    location @rewrite {
        if (!-f $document_root/index.html) {
            return 404;
        }
        rewrite ^.*$ /index.html last;
    }

    location ~ /\.ht {
        deny all;
    }

    location /404.html {
        ssi on;
        root /var/www/nginx;
    }

    location /favicon.ico {
        root /var/www/nginx;
    }
}

