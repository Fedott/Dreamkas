{
    "run_list": [
        "recipe[apt::default]",
        "recipe[nginx]",
        "recipe[mongodb::10gen_repo]",
        "recipe[php]",
        "recipe[php-fpm]",
        "recipe[beanstalkd]",

        "recipe[lighthouse]",
        "recipe[lighthouse::hosts]"
    ],
    "php": {
        "directives": {
            "date.timezone": "Europe/Moscow"
        }
    },
    "php-fpm": {
        "pools": ["www"],
        "pool": {
            "www": {
                "user": "wathcman",
                "group": "www-data",
                "max_children": 10,
                "start_servers": 4,
                "min_spare_servers": 2,
                "max_spare_servers": 6
            }
        }
    }
}
